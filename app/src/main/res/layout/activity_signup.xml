<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signup.SignupPage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusedByDefault="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup"
                android:textSize="33dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="150dp"></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:minHeight="50dp"
                android:focusedByDefault="false"
                android:background="@drawable/edit_text_border"
                android:drawableLeft="@drawable/ic_person_grey"
                android:paddingLeft="16dp"
                android:drawablePadding="16dp"
                android:maxLines="1"
                android:id="@+id/usernameRegisterEditText"
                android:hint="Tên đăng nhập/Email">
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:focusedByDefault="false"
                android:inputType="textPassword"
                android:layout_marginBottom="16dp"
                android:minHeight="50dp"
                android:maxLines="1"
                android:background="@drawable/edit_text_border"
                android:drawableLeft="@drawable/ic_lock_grey"
                android:paddingLeft="16dp"
                android:drawablePadding="16dp"
                android:id="@+id/passwordRegisterEditText"
                android:hint="Mật khẩu">
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:focusedByDefault="false"
                android:inputType="textPassword"
                android:layout_marginBottom="16dp"
                android:minHeight="50dp"
                android:background="@drawable/edit_text_border"
                android:drawableLeft="@drawable/ic_lock_grey"
                android:paddingLeft="16dp"
                android:drawablePadding="16dp"
                android:maxLines="1"
                android:id="@+id/repasswordRegisterEditText"
                android:hint="Nhập lại mật khẩu">
            </EditText>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_gradient_background"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/registerButton"
                android:text="@string/signup">
            </Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản?"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/goToLogin"
                android:textColor="@color/lightBlue">
            </TextView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>